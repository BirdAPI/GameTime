<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<body>

<form name="queryForm" action="search">
    <input type="text" name="query" size="75px"/>
    <input type="submit" value="Search" />
</form>

<div id="mygames">
<h2>My Games:</h2>
<br />
<ul style="list-style-type:none">
#for $game in $mygames:
    <li>
        <div>
            <table>
            <tr>
                <td>
                    <a href="$game.link"><img src="$game.boxart" width="100px"/></a>
                </td>
                <td valign="top" style="padding-left:15px" >
                    <div>
                        #set $score = $game.ign_score if $game.ign_score else "No Rating"
                        <b><a href="$game.link">$game.name [$game.system] - $score</a></b> <br />
                        <b>Release Date:</b> $game.release_date_text <br />
                        $game.summary
                    </div>
                </td>
            </tr>
            </table>
        </div>
        <br />
    </li>
#end for
</ul>
</div>

</body>
</html>